<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xming.modules.secondary.dao.StudentDao">

    <insert id="insertStudent" parameterType="com.xming.modules.secondary.bean.Student">
        insert into student
        <trim prefix="(" suffix=")" suffixOverrides="," >
           <if test="id != null" >
                id,
            </if>
            <if test="name != null" >
                name,
            </if>
            <if test="age != null" >
                age,
            </if>
            <if test="school != null" >
                school,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides="," >
            <if test="id != null" >
                #{id,jdbcType=INTEGER},
            </if>
            <if test="name != null" >
                #{name,jdbcType=VARCHAR},
            </if>
            <if test="age != null" >
                #{age,jdbcType=INTEGER},
            </if>
            <if test="school != null" >
                #{school,jdbcType=INTEGER},
            </if>
        </trim>
    </insert>

</mapper>